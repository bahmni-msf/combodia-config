{
        "id": "bahmni.registration",
        "instanceOf":"bahmni.template.registration",
        "description": "Bahmni Patient Registration App",
        "extensionPoints": [
            {
                "id": "org.bahmni.registration.patient.search.result.action",
                "description": "Bahmni Patient Search Result Action"
            },
              
            {  "id": "org.bahmni.registration.patient.next",
                "description": "After Bahmni Patient Registration, forward url configuration"
            }
        ],
        "contextModel": [
            "patientUuid",
            "activeVisitUuid"
        ],
        "config" : {
              "forwardUrlsForVisitTypes": [
               {
                   "visitType": "OPD",
                   "forwardUrl": "../appointments/#/home/manage/summary",
                   "translationKey": "Start OPD Visit",
                   "shortcutKey": "c"
               }],
            "patientInformation": {
                "additionalPatientInformation": {
                    "title": "Additional Patient Information",
                    "attributes": [
                        "distanceFromCenter",
                        "isUrban",
                        "cluster",
                        "RationCard",
                        "familyIncome",
                        "debt",
                        "cluster"
                    ]
                },
                "hidden": {
                    "attributes": [
                        "primaryContact"
                    ]
                },
                "defaults":  {
                    "class": "General",
                    "landHolding": 2
                }
            },
            "addressHierarchy": {
                "showAddressFieldsTopDown": false,
                "strictAutocompleteFromLevel": "stateProvince"
            },
            "relationshipTypeMap": {
                "Doctor":"provider",
                "Parent":"patient"
            },

            "autoCompleteFields":["familyName", "caste"],
            "defaultIdentifierPrefix": "GAN",
            "searchByIdForwardUrl": "/patient/{{patientUuid}}",
            "defaultVisitType": "OPD",
            "showMiddleName": false,
            "showLastName": true,
            "isLastNameMandatory": true,
            "showSaveConfirmDialog": false,
            "showBirthTime": true,
            "disablePhotoCapture": true,
            "showCasteSameAsLastNameCheckbox": false,
            "showStartVisitButton": true,
            "mandatoryPersonAttributes": ["Patient phone number 1","HospitalID"],
            "printOptions": [
            {
                "translationKey": "REG_CARD_PRINT",
                "templateUrl": "/bahmni_config/openmrs/apps/registration/registrationCardLayout/print.html",
                "shortcutKey": "p"
            }
            ],
            "conceptSetUI": {
                "REGISTRATION FEES": {
                    "required": true,
                    "label": "Fee"
                },
                "FHS": {
                    "buttonSelect": true
                },
                "defaults":{
                    "FHS": "Present"
                }
            },
            "fieldValidation" : {
                "address1" : {"pattern" : "[a-zA-Z0-9\\s]{2,}", "errorMessage" : "Should contain at least 2 characters"},
               "HospitalID":{ "pattern" :"^[0-9]{3}-[0-9]{3}-[0-9]{3}-[0-9]{1}$", "errorMessage" : "Should be in 000-000-000-0 pattern"}
            },
               "patientSearch": {
                  "address": {
                    "label": "Address",
                    "placeholder": "Enter Address",
                    "field": "address2"
                  },
		"customAttributes": {
    			"label": "PhoneNumber",
    			"placeholder":"Enter PhoneNumber1",
    			"fields": ["Patient phone number 1"]
  		}
       }
   }
}
